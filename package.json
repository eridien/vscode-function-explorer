{
  "name": "vscode-function-marks",
  "displayName": "Function Marks",
  "description": "Bookmarks for functions, classes, and methods.",
  "icon": "images/icon.png",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/eridien/vscode-function-marks"
  },
  "publisher": "eridien",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-function-marks.toggle",
        "title": "Toggle Function Marks",
        "when": "editorTextFocus"
      },
      {
        "command": "vscode-function-marks.prev",
        "title": "Previous Function Mark",
        "when": "editorTextFocus"
      },
      {
        "command": "vscode-function-marks.next",
        "title": "Next Function Mark",
        "when": "editorTextFocus"
      }
    ],
    "keybindings": [
      {
        "command": "vscode-function-marks.toggle",
        "key": "ctrl+alt+\\",
        "mac": "cmd+alt+\\",
        "when": "editorTextFocus"
      },
      {
        "command": "vscode-function-marks.prev",
        "key": "ctrl+alt+[",
        "mac": "cmd+alt+[",
        "when": "editorTextFocus"
      },
      {
        "command": "vscode-function-marks.next",
        "key": "ctrl+alt+]",
        "mac": "cmd+alt+]",
        "when": "editorTextFocus"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "functionMarks",
          "title": "Function Marks",
          "icon": "images/activity-icon.svg"
        }
      ]
    },
    "views": {
      "functionMarks": [
        {
          "id": "sidebarView",
          "name": "Function Marks",
          "icon": "images/activity-icon.svg"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "command": "vscode-function-marks.toggle",
          "when": "editorTextFocus",
          "group": "1_modification"
        }
      ]
    },
    "configuration": {
      "title": "Function Marks",
      "properties": {
        "function-marks.fileWrap": {
          "type": "boolean",
          "default": true,
          "order": 1,
          "description": "Next and previous wrap around all files instead of just active file."
        },
        "function-marks.includeSubFunctions": {
          "type": "boolean",
          "default": false,
          "order": 2,
          "description": "Include nested functions when marking with a selection."
        },
        "function-marks.filesToInclude": {
          "type": "string",
          "default": "**/*.js, **/*.ts",
          "order": 3,
          "description": "Files to include in the Function Marks explorer. Separate glob patterns with commas."
        },
        "function-marks.filesToExclude": {
          "type": "string",
          "default": "node_modules/**",
          "order": 4,
          "description": "Files to exclude in the Function Marks explorer. Separate glob patterns with commas."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/babel__parser": "^7.0.0",
    "@types/babel__traverse": "^7.20.7",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@babel/types": "^7.27.3",
    "acorn-loose": "^8.5.0",
    "acorn-walk": "^8.3.4",
    "typescript-parser": "^2.6.1"
  }
}
