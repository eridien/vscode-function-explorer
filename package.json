{
  "name": "vscode-function-marks",
  "displayName": "Function Marks",
  "description": "Lightweight function mark alternative to jsdoc",
  "icon": "images/icon.png",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/eridien/vscode-function-marks"
  },
  "publisher": "eridien",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [ {
        "command": "vscode-function-marks.toggle",
        "title":   "Toggle Function Marks",
        "when":    "editorTextFocus"
      }
    ],
     "keybindings": [
      {
        "command": "vscode-function-marks.toggle",
        "key":     "ctrl+alt+\\",
        "mac":     "cmd+alt+\\",
        "when":    "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [ {
          "command": "vscode-function-marks.toggle",
          "when":    "editorTextFocus",
          "group":   "1_modification"
        }
      ]
    },
    "configuration": {
      "title": "Function Marks",
      "properties": {
        "function-marks.marginTop": {
          "type": "number",
          "default": 2,
          "description": "Number of top margin blank lines."
        },
        "function-marks.alignLeft": {
          "type": "boolean",
          "default": false,
          "description": "Set line indent to match the indent of the line below."
        },
        "function-marks.alignRight": {
          "type": "boolean",
          "default": false,
          "description": "Align the right side of the line to match the right side of the line below."
        },
        "function-marks.indent": {
          "type": "number",
          "default": 0,
          "description": "Indentation spaces to the left. Ignored when alignLeft is enabled."
        },
        "function-marks.padding": {
          "type": "number",
          "default": 2,
          "description": "Spaces on each side of the name."
        },
        "function-marks.splitName": {
          "type": "boolean",
          "default": true,
          "description": "Split name into words based on capitalization."
        },
        "function-marks.upperCase": {
          "type": "boolean",
          "default": true,
          "description": "Display name in all uppercase."
        },
        "function-marks.marginBottom": {
          "type": "number",
          "default": 1,
          "description": "Number of bottom margin blank lines."
        },
        "function-marks.minWidth": {
          "type": "number",
          "default": 20,
          "description": "Minimum width of line."
        },
        "function-marks.maxWidth": {
          "type": "number",
          "default": 80,
          "description": "Maximum width of line."
        },
        "function-marks.fillerString": {
          "type": "string",
          "default": "*",
          "description": "String repeated to fill in the line around the name."
        },
        "function-marks.inline": {
          "type": "boolean",
          "default": false,
          "description": "Display comment as /* */ instead of //."
        },
        "function-marks.descriptionLine": {
          "type": "boolean",
          "default": true,
          "description": "Add empty commented line below the mark line to make space for description."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
